<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="product_share_links" name="Share Links" inherit_id="website_sale.product" active="True" customize_show="True">
    <xpath expr="//div[hasclass('js_product')]" position="inside">
        <div t-field="product.name" id="product_name" style="display:none;"/>
        <div t-field="product.description_sale" id="product_desc" style="display:none;"/>
        <div t-field="product.image_1920" id="product_img" style="display:none;"/>
        <div class="product_share">
            <h6 class="text-uppercase font-weight-bold">Share this product</h6>
            <a href="#" aria-label="Facebook" title="Share on Facebook" t-attf-class="o_facebook"><i class="fa fa-facebook-square text-facebook"/></a>
            <a href="#" aria-label="Twitter" title="Share on Twitter" t-attf-class="o_twitter"><i class="fa fa-twitter text-twitter" aria-label="Twitter" title="Twitter"/></a>
            <a href="#" aria-label="LinkedIn" title="Share on LinkedIn" t-attf-class="o_linkedin"><i class="fa fa-linkedin text-linkedin" aria-label="LinkedIn" title="LinkedIn"/></a>
            <a href="#" aria-label="Pinterest" title="Share on Pinterest" t-attf-class="o_pinterest"><i class="fa fa-pinterest text-pinterest" aria-label="pinterest" title="pinterest"/></a>
            <a href="#" aria-label="envelope" title="Share on envelope" t-attf-class="o_mail"><i class="fa fa-envelope text-envelope" aria-label="o_mail" title="o_mail"/></a>
        </div>
    </xpath>
</template>
</odoo>
